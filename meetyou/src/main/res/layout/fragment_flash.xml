<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2efc6">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffcd03c"
        android:minHeight="?attr/actionBarSize">

        <com.example.annawang.meetyou.widget.LoadingView
            android:id="@+id/electric_fan_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fffcd03c"
            app:loading_renderer="ElectricFanLoadingRenderer"/>

    </android.support.v7.widget.Toolbar>

    <su.levenetc.android.textsurface.TextSurface
        android:id="@+id/text_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="50dp"/>

</RelativeLayout>